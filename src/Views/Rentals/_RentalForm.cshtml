@model RentCarViewModel

@* the viewbag makes the difference between the two forms Edit/Create :D *@
<form asp-action="@ViewBag.Action">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <input type="hidden" asp-for="Id"/>
  <div class="form-group">
    <label asp-for="Customers" class="control-label"></label>
    <select asp-for="CustomerId" asp-items="Model!.Customers" class="form-control"></select>
    <span asp-validation-for="CustomerId" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="AvailableCars" class="control-label"></label>
    <select asp-for="CarId" asp-items="Model!.AvailableCars" class="form-control"></select>
    <span asp-validation-for="CarId" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="RentalDate" class="control-label"></label>
    <input asp-for="RentalDate" class="form-control"/>
    <span asp-validation-for="RentalDate" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="ExpectedReturnDate" class="control-label"></label>
    <input asp-for="ExpectedReturnDate" class="form-control"/>
    <span asp-validation-for="ExpectedReturnDate" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="TotalCost" class="control-label"></label>
    <input asp-for="TotalCost" class="form-control"/>
    <span asp-validation-for="TotalCost" class="text-danger"></span>
  </div>
  <div class="form-group my-2">
    <input role="button" type="submit" value="Save" class="btn btn-primary"/>
  </div>
</form>
