@model IEnumerable<RentalDetailsViewModel>

@{
    ViewData["Title"] = "All Rentals";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
          <th>
            @Html.DisplayNameFor(model => model.CustomerName)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.CarDetails)
          </th>
            <th>
                @Html.DisplayNameFor(model => model.RentalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
          <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
          </td>
          <td>
                @Html.DisplayFor(modelItem => item.CarDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
